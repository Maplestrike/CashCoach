<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/balanceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp"
                android:background="@drawable/background_linear_gradient">

                <TextView
                    android:id="@+id/balanceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="390.000"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="48dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Balance (Rp)"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginBottom="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/balanceLayout"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/rectangle_gray_slightly_darker"
                android:foregroundGravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:gravity="center">

                    <GridLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:rowCount="2"
                        android:columnCount="2"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/circle_green"
                            android:layout_gravity="center_vertical"
                            android:layout_row="1"
                            android:layout_column="0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#CCFFFFFF"
                            android:fontFamily="@font/dm_sans"
                            android:text="Earned (Rp)"
                            android:textSize="11dp"
                            android:layout_row="0"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="1.250.000"
                            android:fontFamily="@font/dm_sans"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:layout_row="1"
                            android:layout_column="1"/>

                    </GridLayout>

                    <GridLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:rowCount="2"
                        android:columnCount="2"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/circle_red"
                            android:layout_gravity="center_vertical"
                            android:layout_row="1"
                            android:layout_column="0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#CCFFFFFF"
                            android:fontFamily="@font/dm_sans"
                            android:text="Spent (Rp)"
                            android:textSize="11dp"
                            android:layout_row="0"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="860.000"
                            android:fontFamily="@font/dm_sans"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:layout_row="1"
                            android:layout_column="1"/>

                    </GridLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#979797"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You spent Rp500.000 on shopping this month!"
                        android:textColor="@color/white"
                        android:fontFamily="@font/dm_sans"
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"/>

                    <Button
                        android:id="@+id/moreDetailsBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_lblue"
                        android:text="More Details"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/dm_sans"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses Overview"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pie_graph"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shopping_bag"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shopping"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/dm_sans"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 transactions"
                                android:textColor="#CCFFFFFF"
                                android:textSize="16dp"
                                android:fontFamily="@font/dm_sans"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp800.000"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/dm_sans"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bar_shopping_longer"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_shopping_cart_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Groceries"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/dm_sans"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 transactions"
                                android:textColor="#CCFFFFFF"
                                android:textSize="16dp"
                                android:fontFamily="@font/dm_sans"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp635.000"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/dm_sans"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bar_groceries"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_fastfood_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food &amp; Drinks"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/dm_sans"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8 transactions"
                                android:textColor="#CCFFFFFF"
                                android:textSize="16dp"
                                android:fontFamily="@font/dm_sans"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp400.000"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/dm_sans"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bar_foodndrinks"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shopping_bag"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transportation"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/dm_sans"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 transactions"
                                android:textColor="#CCFFFFFF"
                                android:textSize="16dp"
                                android:fontFamily="@font/dm_sans"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp300.000"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/dm_sans"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bar_transportation"/>

                </LinearLayout>

                <Button
                    android:id="@+id/viewBudgetPlanBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_lblue"
                    android:text="View Budget Plan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News and Promos"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            android:layout_marginRight="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#505050"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_img"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Saving 101"
                                        android:fontFamily="@font/dm_sans"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="14dp"
                                        android:layout_marginBottom="10dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Learn the barebones basics of money saving!"
                                        android:justificationMode="inter_word"
                                        android:fontFamily="@font/dm_sans"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="10dp"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Learn More"
                                    android:fontFamily="@font/dm_sans"
                                    android:textColor="#34B6FF"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp"
                            android:layout_marginRight="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#505050"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_img"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Saving 101"
                                        android:fontFamily="@font/dm_sans"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="14dp"
                                        android:layout_marginBottom="10dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Learn the barebones basics of money saving!"
                                        android:justificationMode="inter_word"
                                        android:fontFamily="@font/dm_sans"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="10dp"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Learn More"
                                    android:fontFamily="@font/dm_sans"
                                    android:textColor="#34B6FF"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#505050"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_img"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Saving 101"
                                        android:fontFamily="@font/dm_sans"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="14dp"
                                        android:layout_marginBottom="10dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Learn the barebones basics of money saving!"
                                        android:justificationMode="inter_word"
                                        android:fontFamily="@font/dm_sans"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="10dp"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Learn More"
                                    android:fontFamily="@font/dm_sans"
                                    android:textColor="#34B6FF"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

