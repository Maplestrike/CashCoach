<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InvestFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PersonalFragment"
        android:background="#282828"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning : Investment"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/dm_sans"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start planning your investments!"
            android:textColor="#CCFFFFFF"
            android:textSize="16dp"
            android:fontFamily="@font/dm_sans"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/rectangle_gray"
            android:src="@drawable/financial_img"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_gray_slightly_darker"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_sticky_note_2_24"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment Plan 1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You spent Rp50.000 on food. That’s 50% higher than normal!"
                    android:justificationMode="inter_word"
                    android:textColor="#CCFFFFFF"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Details"
                    android:justificationMode="inter_word"
                    android:textColor="#34B6FF"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_gray_slightly_darker"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_sticky_note_2_24"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment Plan 2"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You spent Rp50.000 on food. That’s 50% higher than normal!"
                    android:justificationMode="inter_word"
                    android:textColor="#CCFFFFFF"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Details"
                    android:justificationMode="inter_word"
                    android:textColor="#34B6FF"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_gray_slightly_darker"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_sticky_note_2_24"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment Plan 3"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You spent Rp50.000 on food. That’s 50% higher than normal!"
                    android:justificationMode="inter_word"
                    android:textColor="#CCFFFFFF"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Details"
                    android:justificationMode="inter_word"
                    android:textColor="#34B6FF"
                    android:fontFamily="@font/dm_sans"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

